<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Panel</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg bg-white border-bottom mb-4">
    <div class="container">
      <a class="navbar-brand" href="/panel">Subastas</a>
      <div class="d-flex align-items-center">
        <span class="me-3 text-muted">
          Hola, <strong><%= (user && user.nombre) || 'Usuario' %></strong>
        </span>
        <a href="/logout" class="btn btn-outline-danger btn-sm">Salir</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="alert alert-success">Sesión iniciada correctamente.</div>

    <div class="card p-4 shadow-sm">
      <h5 class="mb-3">Datos de sesión</h5>
      <ul class="list-group">
        <li class="list-group-item">
          <strong>Email:</strong> <%= user && user.email %>
        </li>
        <li class="list-group-item">
          <strong>Rol ID:</strong> <%= user && user.id_rol ? user.id_rol : 'No especificado' %>
        </li>
        <li class="list-group-item">
          <strong>Estado:</strong> <%= user && user.activo === 1 ? 'Activo' : 'Inactivo' %>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>
